@using Grupperum_Website_Klient.Models;


@{
    ViewBag.Title = "Opret Gruppe";
}

<h2>Opret Gruppe</h2>

@using (Html.BeginForm("CreateGroup", "Home", FormMethod.Post))
{
    StudentList sList = new StudentList();

    @Html.TextBox("groupName", null, new { placeholder = "Gruppe navn", required = "required" })

    foreach (Grupperum_Website_Klient.GrumService.Student s in ViewBag.People)
    {
        Student stud = new Student(s.Id, s.Name);
        sList.Add(stud);
    }

    <table border="1">
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Til gruppe</td>
        </tr>
        @{int i = 0;}
        @foreach (Student s in sList.studList)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                @*<td>@Html.CheckBox(s.Id.ToString(), new { value = s.Id, id = s.Id })</td>*@
                <td><input type="checkbox" value="@s.Id" name="selected" /></td>
            </tr>
            i++;
        }
    </table>

    <p class="submit"><input type="submit" name="createGroup" value="Opret gruppe"></p>
}